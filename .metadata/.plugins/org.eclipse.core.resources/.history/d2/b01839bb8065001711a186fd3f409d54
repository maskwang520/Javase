		FileWriter fwrite=new FileWriter(f);
		fwrite.write("中国,我爱你");
		fwrite.close();
		char []c=new char[1];
		FileReader fread=new FileReader(f);
		int i;
		while((i=fread.read(c))!=-1){
			System.out.println(new String(c));
		}
		fread.close();
		

	}

